<div id="<%= dom_id product %>">
  <p>
    <strong>Product name:</strong>
    <%= product.product_name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Supplier:</strong>
    <%= product.supplier_id %>
  </p>

  <p>
    <strong>Subcategory:</strong>
    <%= product.subcategory %>
  </p>

  <p>
    <strong>Origin:</strong>
    <%= product.origin %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= product.size %>
  </p>

</div>
