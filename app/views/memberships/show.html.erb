<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Membership</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to memberships_path, class: button_class(theme: "transparent") do %>
      All Memberships
      <% end %>
      <% if user_signed_in? %>
        <%= link_to 'Edit Membership', edit_membership_path(@membership) %>
      <% end %>
    </div>
  </div>
  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Mem name:</p>
        <p><%= @membership.mem_name %></p>
      </li>
      <li>
        <p class="font-semibold">Gender:</p>
        <p><%= @membership.gender %></p>
      </li>
      <li>
        <p class="font-semibold">Date of birth:</p>
        <p><%= @membership.date_of_birth %></p>
      </li>
      <li>
        <p class="font-semibold">Contact:</p>
        <p><%= @membership.contact %></p>
      </li>
      <li>
        <p class="font-semibold">Address:</p>
        <p><%= @membership.address %></p>
      </li>
  </ul>
</div>
